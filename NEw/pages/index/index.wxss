page {
  height: 100%;
}
.news_all {
  width: 100%;
  height: 100%;
}
.head {
  width: 100%;
  text-align: center;
}
.head_image {
  width: 260rpx;
  margin-top: 8rpx;
}
.search_view {
  display: flex;
  flex-direction: row;
  margin: 0 0 12rpx 50rpx;
}
.search_input {
  width: 400rpx;
  height: 62rpx;
  border: 1px solid #c4c4c4;
  margin: 10rpx 0 0 80rpx;
  border-radius: 8%;
  text-align: left;
  font-size: 30rpx;
  padding-left: 20rpx;
}
.search_button {
  margin: 11rpx 0 0 20rpx;
  background: #ffffff;
}
.search_button_img {
  border: none;
  width: 66rpx;
  height: 66rpx;
  margin-left: -12rpx;
}
.category {
  display: flex;
  flex-direction: row;
  color: #707070;
  margin-bottom: 12rpx;
}
.category view {
  margin:0 auto;
}
.content {
  width: 100%;
  height: 300rpx;
}
.content_view {
  width: 100%;
  border-top: 1px solid #e4e4e4;
  display: flex;
  flex-direction: row;
}
.content_left {
  width: 64%;
}
.content_left_title {
  margin: 24rpx 0 0 30rpx;
  font-family: '微软雅黑';
  font-size: 40rpx;
}
.content_left_bottom {
  display :flex;
  flex-direction: row;
  margin: 24rpx 0 24rpx 30rpx;
}
.content_left_time {
  color: #c4c4c4;
  font-size: 25rpx;
}
.content_left_type {
  margin-left: 34rpx;
  color: #c4c4c4;
  font-size: 25rpx;
}
.content_right {
  width: 36%;
  display: flex;
  align-items: center;
}
.content_right_img {
  width: 90%;

  margin: 0 auto;
  align-items: center;
}
button::after{ border: none;}
